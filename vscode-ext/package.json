{
  "name": "remote-clauding",
  "displayName": "Remote Clauding",
  "description": "Share Claude Code sessions to your mobile phone",
  "version": "0.6.0",
  "publisher": "remote-clauding",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "remote-clauding-panel",
          "title": "Remote Clauding",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "remote-clauding-panel": [
        {
          "type": "webview",
          "id": "remote-clauding.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "remote-clauding.toggleShare",
        "title": "Remote Clauding: Toggle Share to Mobile"
      },
      {
        "command": "remote-clauding.openPanel",
        "title": "Remote Clauding",
        "icon": {
          "light": "media/icon.svg",
          "dark": "media/icon.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "remote-clauding.openPanel",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "package": "npx @vscode/vsce package --allow-missing-repository",
    "install-ext": "npx @vscode/vsce package --allow-missing-repository && code --install-extension remote-clauding-0.6.0.vsix --force && rm remote-clauding-0.6.0.vsix"
  },
  "dependencies": {
    "ws": "^8.18.0",
    "qrcode": "^1.5.4"
  }
}
